{% extends 'admin/base.html.twig' %}

{% block title %}Gestion utilisateurs{% endblock %}

{% block body %}
    <h2>Liste des utilisateurs</h2>

    {% include 'admin/_layouts/flash_message.html.twig' %}

    {{ form(roleForm) }}

    <table class="table-users">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>RÃ´le</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% set biggestRole = user.roles|first|replace({'ROLE_': ''})|lower|capitalize %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ biggestRole }}</td>
                <td>
                    {% if biggestRole == 'Contributor' %}
                        <div class="sof-form-activator" data-name="{{ user.username }}" data-role-wanted="USER">Supprimer role contributor</div>
                    {% elseif biggestRole == 'User' %}
                        <div class="sof-form-activator" data-name="{{ user.username }}" data-role-wanted="CONTRIBUTOR">Ajouter role contributor</div>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div id="confirmation-modal" class="confirmation-modal d-none">
        <p class="confirmation-modal_message"></p>
        <div class="confirmation-modal_buttons">
            <div id="modal-confirm" class="btn btn-confirm">Confirmer</div>
            <div id="modal-cancel" class="btn btn-cancel">Annuler</div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('sfo-autofill') }}
{% endblock %}
