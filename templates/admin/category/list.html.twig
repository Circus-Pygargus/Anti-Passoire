{% extends 'admin/base.html.twig' %}

{% block body %}
    <h2>Liste des catégories</h2>

    {% include 'admin/_layouts/flash_message.html.twig' %}

    <a href="{{ path('admin_category_create') }}">Créer une catégorie</a>

    <ul>
    {% for category in categories %}
        <li><a href="{{ path('admin_category_edit', {slug: category.slug}) }}">{{ category.label }}</a></li>
    {% else %}
        <li>Il n'y a pas de catégories enregistrées</li>
    {% endfor %}
    </ul>
{% endblock %}
